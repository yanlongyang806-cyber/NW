OperationDef
	Name "Step" // Name of the operation
	Category "Combiner"
	Description "Step"
	Type SIMPLE

	Input
		Name Value
		Description "Value to step"
		Float 4
		NoAutoConnect 1
		Default
			Type Value
			Floats 0.5 0.5 0.5 0.5
		EndDefault
	EndInput

	Input
		Name Step
		Description "Step location"
		Float 4
		NoAutoConnect 1
	EndInput

	Output
		Name Result
		Description "0 if Value < Step, 1 otherwise"
		Float 4
		AlphaFrom Value
	EndOutput

EndOperationDef

