OperationDef
	Name "WorldSpaceNormal" // Name of the operation
	Description "World Space Normal (the object's normal in terms of the world)"
	Type Custom

	MinShader 3.0

	Input
		Name Normal
		Description "Camera Space Normal direction"
		Float 4
		Type Normal
		Default
			Type Value
			Floats 0.0 0.0 1.0 0.0
		EndDefault
	EndInput

	Output
		Name Result
		Description "World Space Normal"
		Float 4
		Type Normal
	EndOutput

EndOperationDef

